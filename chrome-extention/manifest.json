{
  "name": "Phishing detector - Chrome extension",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Detects potential phishing pages based on URL and HTML content.",
  "permissions": [
    "tabs",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "scripts/content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "phishing-detectors/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}